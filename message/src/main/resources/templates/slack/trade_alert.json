{
  "webHookUrl": "https://hooks.slack.com/services/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",
  "attachmentTemplates": [
    {
      "color": {
        "type": "refer",
        "targetField": "color"
      },
      "author": {
        "type": "format",
        "formatString": "${exchange}-${symbol}",
        "targetFields": [
          "exchange",
          "symbol"
        ]
      },
      "authorLink": {
        "type": "refer",
        "targetField": "referenceLink"
      },
      "text": {
        "type": "format",
        "formatString": "[${symbol}] Heavy trades (*${totalValidPrice}${unitCurrency}*) occurred during ${from} ~ ${to}",
        "targetFields": [
          "symbol",
          "totalValidPrice",
          "unitCurrency",
          "from",
          "to"
        ]
      },
      "fields": [
        {
          "title": "Total ask price",
          "value": {
            "type": "format",
            "formatString": "${totalAskPrice} ${targetCurrency}",
            "targetFields": [
              "totalAskPrice",
              "targetCurrency"
            ]
          }
        },
        {
          "title": "Total bid price",
          "value": {
            "type": "format",
            "formatString": "${totalBidPrice} ${targetCurrency}",
            "targetFields": [
              "totalBidPrice",
              "targetCurrency"
            ]
          }
        },
        {
          "title": "Current price (Change rate)",
          "value": {
            "type": "format",
            "formatString": "${price}${unitCurrency}(${priceChangeRate}%)",
            "targetFields": [
              "price",
              "unitCurrency",
              "priceChangeRate"
            ]
          }
        }
      ]
    }
  ]
}